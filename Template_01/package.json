{
  "name": "template-01",
  "version": "1.0.0",
  "description": "Template 01 with CSS compiler and design system",
  "main": "index.html",
  "scripts": {
    "dev": "concurrently \"npm run sass:watch\" \"npm run tailwind:watch\"",
    "build": "npm run sass:build && npm run tailwind:build",
    "sass:watch": "sass --watch scss:css --style compressed",
    "sass:build": "sass scss:css --style compressed",
    "tailwind:watch": "npx tailwindcss -i ./css/input.css -o ./css/tailwind.css --watch",
    "tailwind:build": "npx tailwindcss -i ./css/input.css -o ./css/tailwind.css --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "daisyui": "^5.0.54",
    "postcss": "^8.5.6",
    "sass": "^1.69.0",
    "tailwindcss": "^3.4.17"
  },
  "keywords": [
    "css",
    "sass",
    "design-system",
    "template"
  ],
  "author": "",
  "license": "MIT"
}
